

<section class="mt-5 mx-auto">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-11">
                <div class="card">
                    <div class="card-body">
                        <div class="div-01 d-flex justify-content-between">
                            <h3 class="fw-bold text-primary">All Student</h3>
                            <a class="btn btn-primary" href="/student/add-student">Add New Student</a>
                        </div>
                        <hr>
                        <table class="table table-hover table-striped">
                            <thead class="border-bottom border-3">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Photo</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody style="vertical-align: middle;">
                                <% all_student.forEach((element, index ) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= element.name %></td>
                                        <td><%= element.email %></td>    
                                        <td> <img style="width: 50px; height: 50px; object-fit: cover;" src="/assets/upload/<%= element.photo %>" alt=""> </td>
                                        <td>
                                            <a class="btn btn-info btn-sm" href="/student/<%= element._id %>"><i class="fa fa-eye"></i></a>
                                            <a class="btn btn-warning btn-sm" href="/student/edit/<%= element._id %>"><i class="fa fa-edit"></i></a>
                                            <a class="btn btn-danger btn-sm" href="/student/delete/<%= element._id %>"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

